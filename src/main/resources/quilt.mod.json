			},
			"license": "MIT",
			"icon": "assets/quilt_loading_screen/icon.png"
		},
		"intermediate_mappings": "net.fabricmc:intermediary",
		"entrypoints": {
			"client_init": "com.emmacypress.quilt_loading_screen.QLSClientInit"
		},
